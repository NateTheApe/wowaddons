			<OnLoad>
				GameTooltip_OnLoad(self)
				self:SetPadding(16)
				self:RegisterForDrag("LeftButton")
			</OnLoad>
			<OnDragStart>
				self:StartMoving()
			</OnDragStart>
			<OnDragStop>
				self:StopMovingOrSizing()
			</OnDragStop>
		</Scripts>
	</GameTooltip>

