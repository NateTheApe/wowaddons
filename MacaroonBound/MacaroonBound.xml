	<Frame name="MacaroonSpellBinder" frameStrata="BACKGROUND" toplevel="false" parent="UIParent">
		<Frames>
			<Button name="$parentKeyBind" parent="SpellBookPrevPageButton" toplevel="true" id="1">
				<Size x="32" y="32"/>
				<Anchors>
					<Anchor point="RIGHT" relativePoint="LEFT">
						<Offset x="-325" y="0"/>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<FontString name="$parentText" inherits="GameFontNormal" nonspacewrap="true">
							<Anchors>
								<Anchor point="LEFT">
									<Offset x="27" y="0"/>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnLoad>
						self.elapsed = 0;
						self.click = nil;
						self:RegisterForClicks("AnyUp");
						self:RegisterForClicks("AnyDown");
						self:RegisterEvent("ADDON_LOADED")
					</OnLoad>
					<OnEvent>
						_G[self:GetName().."Text"]:SetText(Macaroon.Strings.BOUND_SPELL_KEYBIND)
					</OnEvent>
					<OnClick>
						Macaroon.SpellBinder_OnClick(self, button)
					</OnClick>
					<OnShow>
						Macaroon.SpellBinder_OnShow(self)
					</OnShow>
					<OnHide>
						Macaroon.SpellBinder_OnHide(self)
					</OnHide>
					<OnEnter>
						self.enter = 1;
						GameTooltip:SetOwner(self, "ANCHOR_RIGHT");
						GameTooltip:SetText(Macaroon.Strings.BOUND_TOGGLE_SPELL_KEYBIND)
					</OnEnter>
					<OnLeave>
						self.updateTooltip = nil;
						GameTooltip:Hide();
					</OnLeave>
				</Scripts>
				<NormalTexture file="Interface\Addons\MacaroonBound\Images\MacaroonBindOffButton.tga"/>
				<PushedTexture file="Interface\Addons\MacaroonBound\Images\MacaroonBindOnButton.tga"/>
				<DisabledTexture file="Interface\Addons\MacaroonBound\Images\MacaroonBindOffButton.tga"/>
				<HighlightTexture file="Interface\Buttons\UI-PlusButton-Hilight" alphaMode="ADD"/>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				Macaroon.SpellBinder_OnLoad(self)
			</OnLoad>
			<OnEvent>
				Macaroon.SpellBinder_OnEvent(self, event, ...)
			</OnEvent>
		</Scripts>
	</Frame>

